{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": ["$ts-webpack-watch", "$ts-checker-webpack-watch"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "watch.test",
      "type": "npm",
      "script": "watch.test",
      "isBackground": true,
      "group": "test",
      "problemMatcher": ["$tsc-watch"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
