{
  "version": "0.1.0",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": [
        "*.md",
        "*.json",
        "*.config.js",
        "*.spec.ts",
        "*.it.ts"
      ]
    }
  },
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "packages": [
    "packages/*"
  ]
}
