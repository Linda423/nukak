{
  "version": "0.0.0",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.spec",
        "*.json",
        "*.config.js"
      ]
    }
  },
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "packages": [
    "packages/*"
  ]
}
