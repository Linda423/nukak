{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Roger Padilla",
  "scripts": {
    "build.core": "cd packages/core && yarn build",
    "build.platform-browser": "cd packages/platform-browser && yarn build",
    "build.plugin-express": "cd packages/plugin-express && yarn build",
    "build": "concurrently 'npm:build.core' 'npm:build.platform-browser' 'npm:build.plugin-express'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "yarn run lint -- --fix",
    "test": "jest",
    "test.watch": "jest --watchAll",
    "test.all.watch": "npm run test.watch -- --testMatch '**/*.{it,spec}.ts'",
    "test.pattern.watch": "npm run test.watch -- --testMatch '**/mariadbQuerierPool.it.ts'",
    "rs": "run-rs -v 4.2.10 -l ubuntu1804",
    "container": "concurrently 'npm:rs' 'docker-compose up'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "run-rs": "0.7.4",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
