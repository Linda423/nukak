{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Roger Padilla",
  "scripts": {
    "build.core": "cd packages/core && yarn build",
    "build.platform-browser": "cd packages/platform-browser && yarn build",
    "build.platform-express": "cd packages/platform-express && yarn build",
    "build": "concurrently 'npm:build.core' 'npm:build.platform-browser' 'npm:build.platform-express'",
    "release": "lerna publish --contents dist --force-publish --no-git-tag-version --no-changelog --yes",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "yarn run lint -- --fix",
    "test": "rimraf coverage && concurrently 'npm:lint' 'jest'",
    "test.watch": "jest --clearCache && jest --watchAll",
    "test.watch.pattern": "jest --clearCache && jest --watchAll --testPathPattern=definition.spec.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "concurrently": "^5.2.0",
    "conventional-changelog-angular": "^5.0.10",
    "conventional-changelog-cli": "^2.0.34",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
