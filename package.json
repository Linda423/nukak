{
  "name": "corozo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "npm run lint -- --fix",
    "test": "rm -rf coverage && concurrently 'npm:lint' 'jest'",
    "test.watch": "jest --clearCache && jest --watchAll",
    "test.watch-pattern": "jest --clearCache && jest --watchAll --testPathPattern=Pool.spec.ts",
    "build": "rm -rf dist && concurrently 'tsc' 'npm:build.browser'",
    "build.browser": "webpack --progress --profile --bail --mode=production",
    "release": "concurrently 'npm:build' 'tsc'",
    "start": "webpack --profile --bail --watch --info-verbosity verbose"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint.fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/jest": "^26.0.4",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "concurrently": "^5.2.0",
    "conventional-changelog-angular": "^5.0.10",
    "conventional-changelog-cli": "^2.0.34",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^5.0.7",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "source-map-loader": "^1.0.1",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-log": "^3.0.1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "description": "Querier for TypeScript, ES2015+. Supports MySQL, PostgreSQL, MariaDB, MongoDB databases.",
  "author": {
    "name": "Roger Padilla",
    "email": "rogerjose81@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rogerpadilla/corozo.git"
  },
  "bugs": {
    "url": "https://github.com/rogerpadilla/corozo/issues"
  },
  "keywords": [
    "orm",
    "mongo",
    "mongodb",
    "mysql",
    "mariadb",
    "postgresql",
    "sqlite",
    "sqlite3",
    "ts",
    "typescript",
    "js",
    "javascript",
    "entity",
    "corozo",
    "data-mapper"
  ],
  "engines": {
    "node": ">= 10.0.0"
  }
}
