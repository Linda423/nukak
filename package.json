{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Roger Padilla",
  "scripts": {
    "build.uql": "cd packages/uql && yarn build",
    "build.uql-browser": "cd packages/uql-browser && yarn build",
    "build.uql-express": "cd packages/uql-express && yarn build",
    "build": "concurrently 'npm:build.uql' 'npm:build.uql-browser' 'npm:build.uql-express'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "yarn run lint -- --fix",
    "test": "rimraf coverage && concurrently 'npm:lint' 'jest'",
    "test.all": "jest --testMatch '**/*.{it,spec}.ts'",
    "test.all.watch": "npm run test.all -- --watchAll",
    "test.it": "jest --testMatch '**/*.it.ts'",
    "test.it.watch": "npm run test.it -- --watchAll",
    "test.watch": "jest --watchAll",
    "test.watch.pattern": "npm run test.all -- --watchAll --testPathPattern=.*QuerierPool.it.ts",
    "rs": "run-rs -v 4.2.10 -l ubuntu1804"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "run-rs": "0.6.2",
    "semantic-release": "^17.2.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
