{
  "name": "corozo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "rm -rf coverage && concurrently 'npm:lint' 'jest'",
    "watch.test": "jest --clearCache && jest --watchAll",
    "watch": "webpack --profile --bail --watch --info-verbosity verbose",
    "build": "rm -rf dist && webpack --progress --profile --bail --mode=production",
    "start": "npm run watch"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "sqlstring": "^2.3.2"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/mongoose": "^5.7.15",
    "@types/mysql2": "types/mysql2",
    "@types/node": "13.13.5",
    "@types/pg": "7.14.3",
    "@types/terser-webpack-plugin": "2.2.0",
    "@types/webpack": "4.41.12",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "concurrently": "5.2.0",
    "copy-webpack-plugin": "5.1.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "23.9.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "express": "4.17.1",
    "fork-ts-checker-webpack-plugin": "4.1.3",
    "jest": "26.0.1",
    "mongoose": "^5.9.12",
    "mysql": "2.18.1",
    "mysql2": "2.1.0",
    "pg": "8.1.0",
    "prettier": "2.0.5",
    "source-map-loader": "0.2.4",
    "ts-jest": "25.4.0",
    "ts-loader": "7.0.3",
    "ts-node": "8.10.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-log": "3.0.1"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "coverageDirectory": "coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
