{
  "private": true,
  "workspaces": [
    "packages/*"
  ],  
  "scripts": {
    "publish": "yarn build && lerna publish --force-publish",
    "build": "lerna run build --ignore=@uql/core && lerna run build --scope=@uql/core",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "yarn lint --fix",
    "test": "jest --clearCache && concurrently 'npm:lint.fix' 'jest'",
    "test.watch": "jest --watchAll",
    "test.pattern": "jest --testMatch '**/**/*.spec.ts' '**/sqlite/**/*.it.ts'",
    "test.watch.all": "jest --watchAll --testMatch '**/*.{it,spec}.ts'",
    "test.watch.pattern": "jest --watchAll --testMatch '**/**/*.spec.ts' '**/sqlite/**/*.it.ts'",
    "rs": "run-rs -v 4.2.10 -l ubuntu1804",
    "container": "concurrently 'npm:rs' 'docker-compose up'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "^6.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "run-rs": "^0.7.4",
    "semantic-release": "^17.4.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "author": "Roger Padilla"
}
