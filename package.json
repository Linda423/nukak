{
  "private": true,
  "type": "module",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "yarn build && lerna publish patch && git pull && git push",
    "build": "lerna run build",
    "lint": "eslint .",
    "lint.fix": "yarn lint --fix",
    "test": "jest --clearCache && concurrently 'yarn:lint' 'jest'",
    "test.all": "jest --clearCache && jest --testMatch '**/*.{it,spec}.ts'",
    "test.all.watch": "jest --watchAll --testMatch '**/*.{it,spec}.ts'",
    "test.watch": "jest --watchAll",
    "mongo-rs": "run-rs -v 7.0.2 --portStart 27027 -h 127.0.0.1 [-m]",
    "container": "concurrently 'npm:mongo-rs' 'docker-compose up'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.1.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^8.2.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "run-rs": "^0.7.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "author": "Roger Padilla",
  "packageManager": "yarn@3.3.0"
}
