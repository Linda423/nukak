{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Roger Padilla",
  "scripts": {
    "build.core": "cd packages/core && yarn build",
    "build.platform-browser": "cd packages/platform-browser && yarn build",
    "build.platform-express": "cd packages/platform-express && yarn build",
    "build": "concurrently 'npm:build.core' 'npm:build.platform-browser' 'npm:build.platform-express'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint": "eslint --ext .ts .",
    "lint.fix": "yarn run lint -- --fix",
    "test": "rimraf coverage && concurrently 'npm:lint' 'jest'",
    "it": "jest --testMatch '**/*.it.ts'",
    "it.watch": "jest --testMatch '**/*.it.ts' --watchAll",
    "it.watch.pattern": "jest --testMatch '**/*.it.ts' --watchAll --testPathPattern=sqlite3QuerierPool.it.ts",
    "test.watch": "jest --watchAll",
    "run-rs": "run-rs -v 4.2.9 -l ubuntu1804",
    "test.watch.pattern": "jest --watchAll --testPathPattern=definition.spec.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "concurrently": "^5.3.0",
    "conventional-changelog-angular": "^5.0.11",
    "conventional-changelog-cli": "^2.1.0",
    "copyfiles": "^2.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "run-rs": "^0.6.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
